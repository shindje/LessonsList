<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/class_item_v_time" />

    <androidx.cardview.widget.CardView
        android:id="@+id/class_item_card"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/class_item_layout_in"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/class_item_v_icon"
                    tools:src = "@drawable/ic_bow_and_arrow"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintTop_toBottomOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_item_v_name"
                    tools:text = "History"
                    android:textColor="@color/white"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="14dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/class_item_v_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/class_item_v_teacher"
                    tools:text = "Mrs Barros"
                    android:textColor="@color/white"
                    android:layout_marginTop="14dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="14dp"
                    app:layout_constraintStart_toEndOf="@id/class_item_v_icon"
                    app:layout_constraintTop_toBottomOf="@id/class_item_v_name"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/class_item_v_text"
                tools:text = "Preparing..."
                android:textColor="@color/white"
                android:layout_margin="14dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>